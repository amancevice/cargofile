#!/usr/bin/env ruby
gem = Gem::Specification::load("rumfile.gemspec")

rum gem.name do
  tag gem.version

  env :RUBY_VERSION => ENV["RUBY_VERSION"] || "latest"

  stage :build
  stage :test => :build
  stage :release => :test do
    build_arg :RUBYGEMS_API_KEY
  end

  artifact "pkg/#{gem.full_name}.gem" => :build

  default "pkg/#{gem.full_name}.gem"
end
